<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="@dimen/file_choose_item_iv_width"
        android:layout_height="@dimen/file_choose_item_iv_height"
        android:layout_marginLeft="@dimen/file_choose_item_iv_margin_left"
        android:id="@+id/iv_file_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/file_choose_item_tv_margin_left"
        android:id="@+id/tv_file_path"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>
