<?xml version="1.0" encoding="utf-8"?>
<com.meitu.meiyancamera.view.FileChooseLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/file_choose_rl_height">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/fragment_home_back_to_next"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_back_to_next"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_cur_path"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_toLeftOf="@id/btn_back_to_next"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/file_choose_tv_margin_left"
            android:ellipsize="start"/>

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_file_choose"/>

</com.meitu.meiyancamera.view.FileChooseLinearLayout>
